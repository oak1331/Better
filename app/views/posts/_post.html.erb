<div class="col-12 col-lg-6 col-xl-4 p-2">
  <div class="post-box">
    <div class="container">
      <div class="row justify-content-center">
        <div class="post-image">
          <%= link_to image_tag( post.image.variant(resize: '320x180') ), post_path(post.id), class: "col-12 justify-content-center text-center px-0" %>
        </div>
        <div class="col text-truncate d-block w-100">
          <%= link_to post.user.nickname, user_path(post.user.id), class: "post-nickname text-start" %>
        </div>
        <div class="col text-end">
          <i class="fa fa-heart unlike-btn"></i>
          <%= post.likes.length %>
        </div>
        <div class="col-12 text-center text-reset text-truncate d-block w-100">
          <%= link_to post.title, post_path(post.id), class: "post-title" %>
        </div>
      </div>
    </div>
  </div>
</div>
