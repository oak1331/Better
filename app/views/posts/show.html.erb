<h1>投稿詳細ページ</h1>

<table>
  <tbody>
    <tr>
      <th>ユーザーネーム</th>
      <td><%= @post.user.nickname %></td>
    </tr>
    <tr>
      <th>タイトル</th>
      <td><%= @post.title %></td>
    </tr>
    <tr>
      <th>コメント</th>
      <td><%= @post.text %></td>
    </tr>
    <tr>
      <th>オススメの時間</th>
      <td><%= @post.time_slot.name %></td>
    </tr>
    <tr>
      <th>カテゴリー</th>
      <td><%= @post.category.name %></td>
    </tr>
    <tr>
      <th>オススメのシチュエーション</th>
      <td><%= @post.situation.name %></td>
    </tr>
    <tr>
      <th>場所</th>
      <td><%= @post.prefecture.name %></td>
    </tr>
    <tr>
      <th>オススメの天気</th>
      <td><%= @post.weather.name %></td>
    </tr>
  </tbody>
</table>

<% if user_signed_in? && current_user.id == @post.user_id %>
  <%= link_to "編集", edit_post_path(@post.id) %>
  <%= link_to "削除", post_path(@post.id), method: :delete %>
<% end %>

<%= link_to "トップページへ戻る", root_path %>