<section class="index-top">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-7 col-xl-6 text-center">
        <h1 class="mb-5 text-light">よりよいデートを</h1>
        <%= form_with url: search_users_path, local: true, method: :get, class: "d-flex flex-row mb-2 p-1 bg-white shadow-lg input-group rounded-3" do |form| %>
          <%= form.text_field :keyword, placeholder: "検索", class: "form-control form-control-lg rounded-0 border-0 shadow-none" %>
          <%= button_tag type: 'submit', class: "btn btn-secondary rounded-3 flex-shrink-0 shadow-none border-0" do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section class="latest-box">
  <div class="container ">
    <div class="row mb-5 align-items-center">
      <div class="col">
        <h4 class="mb-0">検索結果</h4>
      </div>
    </div>
    <div class="row row-cols-3">
      <div class="col">
        <% @users.each do |user| %>
          <ul class="list-group list-group-horizontal m-2">
            <% if user.avatar? %>
              <li class="list-group-item col-3 col-lg-2 px-1"><%= link_to image_tag( user.avatar.url ), user_path(user) %></li>
            <% else %>
              <li class="list-group-item">
                <%= link_to user_path(user) do %>
                  <i class="fas fa-user"></i>
                <% end %>
              </li>
            <% end %>
            <li class="list-group-item text-center d-flex align-items-center"><%= link_to user.nickname, user_path(user), class: "text-decoration-none text-dark" %></li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</section>
