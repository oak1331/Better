<% if user_signed_in? && current_user.id != @user.id %>
  <% if current_user.following?(@user) %>
    <%= button_to "フォロー中", relationship_path(current_user.relationships.find_by(follower: @user)), method: :delete, class: "btn btn-primary", remote: true %>
  <% else %>
    <%= button_to "フォロー", relationships_path(follower: @user), method: :post, class: "btn btn-outline-primary", remote: true %>
  <% end %>
<% end %>
